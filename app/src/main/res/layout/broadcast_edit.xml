<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ViewSwitcher
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/SPTswitcher"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/hidden_edit_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/some_value" >
        </EditText>

        <TextView
            android:id="@+id/clickable_text_view"
            android:clickable="true" android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="TextViewClicked"
            android:text="@string/some_value" />

    </ViewSwitcher>

    <ViewSwitcher
        android:id="@+id/SPBswitcher"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="38dp">

        <EditText
            android:id="@+id/spt4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="shopping broadcast body" >
        </EditText>

        <TextView
            android:id="@+id/spt3"
            android:clickable="true" android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="TextViewClicked"
            android:text="@string/some_value" />

    </ViewSwitcher>
</RelativeLayout>