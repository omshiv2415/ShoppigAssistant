<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/shopping_assistant_back_three"
    tools:context="assistance.shopping.msc.assistant.main.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="@color/grey_back_one"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextEmail"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="46dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="User Name (Email)"
        android:textColorHint="@android:color/white"
        android:textColor="@android:color/white" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextPassword"
        android:layout_below="@+id/editTextEmail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/editTextEmail"
        android:layout_alignEnd="@+id/editTextEmail"
        android:hint="Password"
        android:textColorHint="@android:color/white"
        android:textColor="@android:color/white" />


    <Button
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:text="Register"
        android:background="@color/grey_black"
        android:id="@+id/buttonInitialRegister"
        android:layout_alignBaseline="@+id/buttonInitialReset"
        android:layout_alignBottom="@+id/buttonInitialReset"
        android:layout_toRightOf="@+id/buttonInitialReset"
        android:layout_marginLeft="39dp"
        android:layout_marginStart="39dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/bright_foreground_inverse_material_light" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:background="@color/grey_black"
        android:id="@+id/buttonLogin"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/editTextPassword"
        android:layout_alignLeft="@+id/sign_in_button_by_Google"
        android:layout_alignStart="@+id/sign_in_button_by_Google"
        android:layout_alignRight="@+id/sign_in_button_by_Google"
        android:layout_alignEnd="@+id/sign_in_button_by_Google"
        android:elevation="0dp"
        android:textColor="@color/bright_foreground_inverse_material_light" />

        <Button
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:text="Reset Password"
            android:background="@color/grey_black"
            android:id="@+id/buttonInitialReset"
            android:textColor="@color/bright_foreground_inverse_material_light"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="71dp" />

        <TextView
            android:text="Shopping Assistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/textView"
            android:textColor="@color/grey_black"
            android:textStyle="normal|bold"
            android:textSize="24sp" />

        <Button
            android:id="@+id/sign_in_button_by_Google"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/common_google_signin_btn_text_light_pressed"
            android:visibility="visible"
            android:layout_above="@+id/buttonInitialRegister"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="66dp" />


    </RelativeLayout>
</RelativeLayout>
