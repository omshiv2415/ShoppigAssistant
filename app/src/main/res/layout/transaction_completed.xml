<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:id="@+id/hideShoppingRequester"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/paymentType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cash" />

        <TextView
            android:id="@+id/shoppingAssistantName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Viral " />

        <TextView
            android:id="@+id/transactionCompletedAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="24-08-2016 WED 00:33:45 AM" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="15dp"
            android:background="@color/cardview_dark_background">

        </RelativeLayout>
        <TextView
            android:id="@+id/ShoppingRequestercurrentLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shopping Assistant Broadcast Location"
            android:textColor="@android:color/background_dark"
            android:textSize="16sp"
            android:textAlignment="center" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:background="@color/cardview_dark_background"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/topLine"
            android:layout_height="2dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@android:color/holo_orange_light">
        </RelativeLayout>
        <TextView
            android:text="281 Thornton Road"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" />

        <TextView
            android:text="Croydon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/shoppingRequesterCity" />

        <TextView
            android:text="CR0 3EW"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/shoppingRequesterPostcode" />
        <TextView
            android:text="Not Available "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/shoppingDelivered" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/srbottomLine"
            android:layout_height="2dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@android:color/holo_orange_light">
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>